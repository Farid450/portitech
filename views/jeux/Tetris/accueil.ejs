<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TETRIS</title>
    <script src="../../../javascripts/Tetris/phaser.min.js"></script>
</head>

<body style="margin:0px auto;">
<header><% include ../../partials/header %></header>
HELLO WORLD

<div>
    <script>

        var game = new Phaser.Game(160, 320, Phaser.AUTO, '', { preload: preload, create: create, update: update });
        function preload() {
            //game.load.spritesheet('LevelTetris0','../../../images/tetris/Tetrominos.png',59,31,-1)
            //game.load.spritesheet('tetrominosT', '../../../images/tetris/Tetrominos.png',24,41,-1,32);
            game.load.spritesheet('tetrominos', '../../../images/tetris/Tetrominos.png',32,16);
            console.log('preload');
        }
        var platforms;
        function create() {
            //game.add.sprite(100, 0, 'LevelTetris0');
            //game.add.sprite(0, 0, 'tetrominosT');

            player = game.add.sprite(20, 0, 'tetrominos');

            game.physics.arcade.enable(player);

            //  Player physics properties. Give the little guy a slight bounce.
            player.body.bounce.y = 0;
            player.body.gravity.y = 100;
            player.body.collideWorldBounds = true;

            //  Our two animations, walking left and right.
            player.animations.add('left', [0, 1, 2, 3], 10, true);
            player.animations.add('right', [5, 6, 7, 8], 10, true);




            console.log('create');
        }

        function update(){
            cursors = game.input.keyboard.createCursorKeys();

            //  Reset the players velocity (movement)
            player.body.velocity.x = 0;

            if (cursors.left.isDown)
            {
                //  Move to the left
                player.body.scale.x = 16;
            }
            else if (cursors.right.isDown)
            {
                //  Move to the right
                player.body.velocity.x = 16;

            }
            else if (cursors.up.isDown)
            {

                player.body.rotateRight = 100;


            }
            console.log('update');
        }

    </script>
</div>

</body>
</html>